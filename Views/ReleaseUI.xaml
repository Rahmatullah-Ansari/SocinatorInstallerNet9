<UserControl
    x:Class="SocinatorInstaller.Views.ReleaseUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:SocinatorInstaller.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SocinatorInstaller.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ReleaseUserControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converter:BooleanToValueConverter
            x:Key="BooleanToValue"
            FalseValue="Close"
            TrueValue="Launch And Close" />
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Background" Value="White" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="#FF262E34" />
            <Setter Property="Foreground" Value="#FF262E34" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                            <Border
                                Width="20"
                                Height="20"
                                Background="Transparent"
                                BorderBrush="LimeGreen"
                                BorderThickness="2"
                                CornerRadius="3">
                                <!--  your color here  -->
                                <Path
                                    Name="eliCheck"
                                    Width="14"
                                    Height="14"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="F1 M 9.97498,1.22334L 4.6983,9.09834L 4.52164,9.09834L 0,5.19331L 1.27664,3.52165L 4.255,6.08833L 8.33331,1.52588e-005L 9.97498,1.22334 Z "
                                    Fill="#1E3A5F"
                                    Stretch="Uniform"
                                    Visibility="Collapsed" />
                            </Border>
                            <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{TemplateBinding Content}" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFFFFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFFFFF" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="LightGray" />
                                <Setter Property="Foreground" Value="#1E3A5F" />
                                <Setter Property="BorderBrush" Value="Gray" />
                                <Setter TargetName="eliCheck" Property="Opacity" Value="0.5" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="eliCheck" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <StackPanel Orientation="Horizontal">
                            <BulletDecorator Margin="0,0,5,0" Background="Transparent">
                                <BulletDecorator.Bullet>
                                    <Border
                                        Width="18"
                                        Height="18"
                                        Background="Transparent">
                                        <Grid>
                                            <Ellipse
                                                Width="18"
                                                Height="18"
                                                Stroke="#1E3A5F"
                                                StrokeThickness="1.5" />
                                            <Ellipse
                                                Width="10"
                                                Height="10"
                                                Fill="#1E3A5F"
                                                Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </Grid>
                                    </Border>
                                </BulletDecorator.Bullet>
                            </BulletDecorator>
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextBoxWithCornerRadiusStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <!--  Adjust corner radius here  -->
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <Border x:Name="RootBorder" CornerRadius="10">
        <Border.Background>
            <ImageBrush ImageSource="/Images/background.png" />
        </Border.Background>
        <Grid Width="850" Height="550">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid Margin="30,30,15,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" VerticalAlignment="Top">
                        <TextBlock
                            FontSize="20"
                            Foreground="White"
                            TextWrapping="Wrap">
                            Socinator : Social Media Automation and Marketing Tool
                        </TextBlock>
                    </StackPanel>
                    <Grid Grid.Row="1" />
                    <Image
                        Grid.Row="2"
                        VerticalAlignment="Bottom"
                        Source="/Images/startingimage.png" />
                </Grid>
            </Grid>



            <Grid Grid.Column="1">
                <Border
                    Margin="15,30,30,30"
                    Background="White"
                    CornerRadius="15">

                    <Grid x:Name="MainGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid
                            x:Name="LogoGrid"
                            Grid.Row="0"
                            Visibility="Visible">
                            <StackPanel
                                Width="200"
                                Height="80"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                                <Image
                                    Width="200"
                                    Height="80"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="/Images/logo.png" />
                            </StackPanel>
                        </Grid>
                        <Grid
                            x:Name="StartGrid"
                            Grid.Row="1"
                            Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="18"
                                    FontWeight="Normal"
                                    Foreground="#22357A"
                                    Text="Welcome to the Socinator Setup Wizard" />
                            </StackPanel>
                            <StackPanel
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                                <TextBlock
                                    Padding="25,0,25,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Block.LineHeight="25"
                                    Block.LineStackingStrategy="BlockLineHeight"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="#000000"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap">
                                    The installer will guide you through the steps required to install Socinator on your computer
                                </TextBlock>
                            </StackPanel>
                            <StackPanel
                                Grid.Row="2"
                                Margin="0,40,0,0"
                                VerticalAlignment="Bottom">
                                <Border
                                    Margin="15,80,15,15"
                                    BorderBrush="#46BCB1"
                                    BorderThickness="2"
                                    CornerRadius="10">
                                    <StackPanel>
                                        <TextBlock
                                            Padding="5,5,5,5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Block.LineHeight="20"
                                            Block.LineStackingStrategy="BlockLineHeight"
                                            FontFamily="{StaticResource RubikRegular}"
                                            FontSize="11"
                                            FontWeight="Light"
                                            Foreground="#000000"
                                            TextAlignment="Justify"
                                            TextWrapping="Wrap">
                                            <Run Foreground="Red">Warning :</Run>
                                            This computer program is protected by copyright law and international treaties. Unauthorized duplication or distribution of the program, or any position of it, may result in severe civil or criminal penalties, and will be prosecuted to the maximum extent possible under the law.</TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                        <Grid
                            Name="DownloadOptionGrid"
                            Grid.Row="1"
                            Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="18"
                                    FontWeight="Normal"
                                    Foreground="#22357A"
                                    Text="Select Installation Folder"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Padding="25,0,25,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Block.LineHeight="25"
                                    Block.LineStackingStrategy="BlockLineHeight"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="#000000"
                                    Opacity="0.8"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap">
                                    The installer will install Socinator to the following folder.
                                </TextBlock>
                            </StackPanel>
                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                                <TextBlock
                                    Padding="25,0,25,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Block.LineHeight="25"
                                    Block.LineStackingStrategy="BlockLineHeight"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="#000000"
                                    Opacity="0.8"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap">
                                    To install in this folder, click<Run
                                        FontFamily="{StaticResource RubikMedium}"
                                        FontWeight="Medium"
                                        Foreground="#092E5A">
                                        “Next”
                                    </Run>
                                    . To install to a different folder , enter it below or click<Run
                                        FontFamily="{StaticResource RubikMedium}"
                                        FontWeight="Medium"
                                        Foreground="#092E5A">
                                        “Browse”
                                    </Run>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel
                                Grid.Row="3"
                                Grid.Column="0"
                                VerticalAlignment="Bottom">
                                <TextBlock
                                    Margin="30,30,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="#092E5A"
                                    Opacity="0.8"
                                    Text="Folder" />
                                <StackPanel Margin="30,0" Orientation="Horizontal">
                                    <TextBox
                                        x:Name="pathTextbox"
                                        Width="225"
                                        Height="30"
                                        VerticalContentAlignment="Center"
                                        Style="{StaticResource TextBoxWithCornerRadiusStyle}"
                                        Text="{Binding DefaultPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <Border
                                        Height="32"
                                        Margin="-40,0,0,0"
                                        BorderBrush="White"
                                        BorderThickness="0.8"
                                        CornerRadius="4">
                                        <Button
                                            Name="Browsebtn"
                                            Height="32"
                                            Padding="8"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            BorderBrush="White"
                                            BorderThickness="1"
                                            Click="Browsebtn_Click"
                                            Content="Browse..."
                                            Cursor="Hand"
                                            FontFamily="{StaticResource RubikRegular}"
                                            FontSize="10"
                                            Foreground="#FFFFFF">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Background" Value="#092E5A" />
                                                    <Setter Property="Opacity" Value="1" />
                                                    <Setter Property="BorderBrush" Value="#092E5A" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Button}">
                                                                <Border
                                                                    Padding="8"
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="#ffffff"
                                                                    BorderThickness="0.1"
                                                                    CornerRadius="5">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                                </Border>
                                                            </ControlTemplate>

                                                        </Setter.Value>

                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Border>
                                    <Border
                                        Height="30"
                                        Margin="5"
                                        BorderBrush="#092E5A"
                                        BorderThickness="0.8"
                                        CornerRadius="4">
                                        <Button
                                            Name="DiskCostBtn"
                                            Height="30"
                                            Padding="8"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Click="DiskCostBtn_Click"
                                            Content="Disk Cost..."
                                            Cursor="Hand"
                                            FontFamily="{StaticResource RubikRegular}"
                                            FontSize="10"
                                            Foreground="#092E5A">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Background" Value="#FFFFFF" />
                                                    <Setter Property="Opacity" Value="0.9" />
                                                    <Setter Property="BorderBrush" Value="#092E5A" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Button}">
                                                                <Border
                                                                    Padding="8"
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="#ffffff"
                                                                    BorderThickness="0.1"
                                                                    CornerRadius="5">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                                </Border>
                                                            </ControlTemplate>

                                                        </Setter.Value>

                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Border>
                                </StackPanel>
                                <TextBlock
                                    Padding="20,0,25,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Block.LineHeight="25"
                                    Block.LineStackingStrategy="BlockLineHeight"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="#000000"
                                    Opacity="0.8"
                                    TextWrapping="Wrap">
                                    Install Socinator for yourself, or for anyone who uses this computer.
                                </TextBlock>
                                <TextBlock
                                    Name="txt_message"
                                    Margin="10,5,10,5"
                                    Padding="5,0,5,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Block.LineStackingStrategy="BlockLineHeight"
                                    FontFamily="{DynamicResource RubikLight}"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="Red"
                                    TextWrapping="Wrap"
                                    Visibility="Collapsed" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <RadioButton
                                            Name="EveryOneBtn"
                                            Margin="30,10,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Content="Everyone"
                                            Cursor="Hand"
                                            FontFamily="{StaticResource RubikRegular}"
                                            FontSize="12"
                                            IsChecked="False" />
                                        <RadioButton
                                            Name="JustMeBtn"
                                            Margin="30,10,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Content="Just me"
                                            Cursor="Hand"
                                            FontFamily="{StaticResource RubikRegular}"
                                            FontSize="12"
                                            IsChecked="True" />
                                    </StackPanel>
                                    <StackPanel
                                        x:Name="VersionSelectionStackpanel"
                                        Grid.Column="1"
                                        Margin="0,3,0,0"
                                        Orientation="Vertical"
                                        Visibility="Collapsed">
                                        <TextBlock
                                            Margin="35,10,0,0"
                                            HorizontalAlignment="Left"
                                            FontFamily="{StaticResource RubikRegular}"
                                            Text="Select Download Version" />
                                        <StackPanel Orientation="Horizontal">
                                            <RadioButton
                                                Name="OnlineVersion"
                                                Margin="30,10,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Content="Online Version"
                                                Cursor="Hand"
                                                FontFamily="{StaticResource RubikRegular}"
                                                FontSize="12"
                                                IsChecked="False" />
                                            <RadioButton
                                                Name="OfflineVersion"
                                                Margin="30,10,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Content="Offline Version"
                                                Cursor="Hand"
                                                FontFamily="{StaticResource RubikRegular}"
                                                FontSize="12"
                                                IsChecked="True" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>


                        </Grid>
                        <Grid
                            Name="ConfirmationGrid"
                            Grid.Row="1"
                            Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="18"
                                    FontWeight="Normal"
                                    Foreground="#22357A"
                                    Text="Confirm Installation" />
                                <TextBlock
                                    Margin="20,10,20,10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Block.LineHeight="20"
                                    Block.LineStackingStrategy="BlockLineHeight"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="#000000"
                                    Opacity="0.8"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap">
                                    The installer is ready to install Socinator on your computer.
                                </TextBlock>
                                <TextBlock
                                    Margin="20,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Block.LineHeight="20"
                                    Block.LineStackingStrategy="BlockLineHeight"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="#000000"
                                    Opacity="0.8"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap">
                                    <Run
                                        FontFamily="{StaticResource RubikRegular}"
                                        FontWeight="Normal"
                                        Text="Click " />
                                    <Run
                                        FontFamily="{StaticResource RubikMedium}"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        Foreground="#092E5A"
                                        Text="“Next”" />
                                    <Run
                                        FontFamily="{StaticResource RubikRegular}"
                                        FontSize="12"
                                        FontWeight="Normal"
                                        Text=" to start the installation." />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                        <Grid
                            Name="InstallingGrid"
                            Grid.Row="1"
                            Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="18"
                                    FontWeight="Normal"
                                    Foreground="#22357A"
                                    Text="Installing Socinator" />
                                <TextBlock
                                    Margin="20,10,20,10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Block.LineHeight="20"
                                    Block.LineStackingStrategy="BlockLineHeight"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="#000000"
                                    Opacity="0.8"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap">
                                    Socinator is being installed
                                </TextBlock>
                                <Grid Margin="0,50,0,0">
                                    <ProgressBar
                                        Name="installingProgressStyle"
                                        Width="300"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Maximum="100"
                                        Value="0">
                                        <ProgressBar.Style>
                                            <Style TargetType="{x:Type ProgressBar}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ProgressBar}">
                                                            <Grid
                                                                Height="12"
                                                                MinWidth="30"
                                                                Background="#FFFFFF">
                                                                <Border
                                                                    x:Name="PART_Track"
                                                                    Height="12"
                                                                    VerticalAlignment="Top"
                                                                    BorderBrush="Transparent"
                                                                    BorderThickness="0"
                                                                    CornerRadius="5"
                                                                    Opacity="0.5">
                                                                    <Border.Background>
                                                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                                            <GradientStop Offset="1.2" Color="#a6c94a" />
                                                                            <GradientStop Offset="0" Color="#69be9b" />
                                                                        </LinearGradientBrush>
                                                                    </Border.Background>
                                                                </Border>

                                                                <Border
                                                                    x:Name="PART_Indicator"
                                                                    HorizontalAlignment="Left"
                                                                    BorderBrush="Transparent"
                                                                    BorderThickness="0"
                                                                    CornerRadius="5">
                                                                    <Border.Background>
                                                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                                            <GradientStop Offset="1.2" Color="#a6c94a" />
                                                                            <GradientStop Offset="0" Color="#69be9b" />
                                                                        </LinearGradientBrush>
                                                                    </Border.Background>
                                                                </Border>
                                                                <VisualStateManager.VisualStateGroups>
                                                                    <VisualStateGroup x:Name="CommonStates">
                                                                        <VisualState x:Name="Determinate" />
                                                                        <VisualState x:Name="Indeterminate">
                                                                            <Storyboard>
                                                                                <ObjectAnimationUsingKeyFrames
                                                                                    Storyboard.TargetName="PART_Indicator"
                                                                                    Storyboard.TargetProperty="Background"
                                                                                    Duration="00:00:00">
                                                                                    <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                                                        <DiscreteObjectKeyFrame.Value>
                                                                                            <SolidColorBrush>Transparent</SolidColorBrush>
                                                                                        </DiscreteObjectKeyFrame.Value>
                                                                                    </DiscreteObjectKeyFrame>
                                                                                </ObjectAnimationUsingKeyFrames>

                                                                            </Storyboard>
                                                                        </VisualState>
                                                                    </VisualStateGroup>
                                                                </VisualStateManager.VisualStateGroups>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="Foreground" Value="Transparent" />
                                            </Style>
                                        </ProgressBar.Style>
                                    </ProgressBar>
                                </Grid>
                                <TextBlock
                                    x:Name="InstallingStatusTextBlock"
                                    Margin="40,10,0,0"
                                    Block.LineHeight="20"
                                    Block.LineStackingStrategy="BlockLineHeight"
                                    FontFamily="{StaticResource RubikRegular}"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="#000000"
                                    Opacity="0.7"
                                    TextWrapping="Wrap">
                                    Please wait installing in progress...
                                </TextBlock>
                                <!--<TextBlock Text="Please wait installing in progress..." Margin="40,15,0,0" FontFamily="{StaticResource RubikLight}" FontSize="15" Foreground="#000000" VerticalAlignment="Center"/>-->
                            </StackPanel>
                        </Grid>
                        <Grid
                            Name="InstallationCompleteGrid"
                            Grid.Row="1"
                            Visibility="Collapsed">
                            <StackPanel Orientation="Vertical">
                                <StackPanel
                                    Width="81"
                                    Height="81"
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center">
                                    <Image
                                        Width="81"
                                        Height="81"
                                        Source="/Images/completed.png" />
                                </StackPanel>
                                <StackPanel Margin="0,20,0,0">
                                    <TextBlock
                                        x:Name="InstallationCompleteTextBlock"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        FontFamily="{StaticResource RubikRegular}"
                                        FontSize="18"
                                        FontWeight="Normal"
                                        Foreground="#22357A"
                                        Text="Installation Completed" />
                                    <TextBlock
                                        x:Name="InstallationCompleteStatusTextBlock"
                                        Margin="20,10,20,10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Block.LineHeight="20"
                                        Block.LineStackingStrategy="BlockLineHeight"
                                        FontFamily="{StaticResource RubikRegular}"
                                        FontSize="12"
                                        FontWeight="Normal"
                                        Foreground="#000000"
                                        Opacity="0.8"
                                        TextAlignment="Center"
                                        TextWrapping="Wrap">
                                        Socinator has been successfully installed
                                    </TextBlock>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Block.LineHeight="10"
                                        Block.LineStackingStrategy="BlockLineHeight"
                                        FontFamily="{StaticResource RubikRegular}"
                                        FontSize="12"
                                        FontWeight="Normal"
                                        Foreground="#000000"
                                        Opacity="0.8"
                                        TextAlignment="Center"
