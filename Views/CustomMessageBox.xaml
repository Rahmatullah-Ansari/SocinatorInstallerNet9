<UserControl
    x:Class="SocinatorInstaller9.Views.CustomMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SocinatorInstaller9.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="300"
    Background="Transparent"
    mc:Ignorable="d">
    <Border
        Background="WhiteSmoke"
        BorderThickness="0"
        CornerRadius="5">
        <Grid
            Width="Auto"
            Height="Auto"
            Margin="0,48,0,0"
            Background="Transparent">
            <TextBlock
                Name="txt_Title"
                Height="30"
                Padding="10,8,5,25"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Background="#092E5A"
                FontFamily="{StaticResource RubikBold}"
                FontWeight="Bold"
                Foreground="WhiteSmoke"
                Text="Confirmation" />
            <TextBlock
                Name="txt_Message"
                Height="50"
                Padding="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{StaticResource RubikBold}"
                Foreground="Black"
                Text="Are you sure want to close application ?"
                TextWrapping="Wrap" />
            <StackPanel
                Name="dpTitleBar"
                Margin="5,55,15,10"
                HorizontalAlignment="Right"
                Background="Transparent"
                Orientation="Horizontal">
                <Button
                    Name="btnYes"
                    Width="75"
                    Height="24"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="clk_Yes"
                    Content="Yes"
                    Cursor="Hand"
                    DockPanel.Dock="Bottom"
                    FontFamily="{StaticResource RubikRegular}"
                    Foreground="WhiteSmoke">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#092E5A" />
                            <Setter Property="Opacity" Value="0.9" />
                            <Setter Property="BorderBrush" Value="#FFFFFF" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border
                                            Padding="25,2,25,2"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="#ffffff"
                                            BorderThickness="0.1"
                                            CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>

                                </Setter.Value>

                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <!--<LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                     <GradientStop Color="#732EBB" Offset="0.1"/>
                                     <GradientStop Color="#EE466A" Offset="1"/>
                                 </LinearGradientBrush>-->
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Offset="1.2" Color="#a6c94a" />
                                                <GradientStop Offset="0" Color="#69be9b" />
                                                <LinearGradientBrush.RelativeTransform>
                                                    <RotateTransform Angle="85" />
                                                </LinearGradientBrush.RelativeTransform>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Opacity" Value="1" />
                                    <Setter Property="BorderBrush" Value="#FFFFFF" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button
                    Name="btnNo"
                    Width="75"
                    Height="24"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="clk_No"
                    Content="No"
                    Cursor="Hand"
                    DockPanel.Dock="Bottom"
                    FontFamily="{StaticResource RubikRegular}"
                    Foreground="WhiteSmoke">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#092E5A" />
                            <Setter Property="Opacity" Value="0.9" />
                            <Setter Property="BorderBrush" Value="#FFFFFF" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border
                                            Padding="25,2,25,2"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="#ffffff"
                                            BorderThickness="0.1"
                                            CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>

                                </Setter.Value>

                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <!--<LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                     <GradientStop Color="#732EBB" Offset="0.1"/>
                                     <GradientStop Color="#EE466A" Offset="1"/>
                                 </LinearGradientBrush>-->
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Offset="1.2" Color="#a6c94a" />
                                                <GradientStop Offset="0" Color="#69be9b" />
                                                <LinearGradientBrush.RelativeTransform>
                                                    <RotateTransform Angle="85" />
                                                </LinearGradientBrush.RelativeTransform>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Opacity" Value="1" />
                                    <Setter Property="BorderBrush" Value="#FFFFFF" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button
                    Name="btnOk"
                    Width="75"
                    Height="24"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="clk_No"
                    Content="Ok"
                    DockPanel.Dock="Bottom"
                    FontFamily="{StaticResource RubikRegular}"
                    Foreground="WhiteSmoke"
                    Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#6E8ABE " />
                            <Setter Property="Opacity" Value="0.9" />
                            <Setter Property="BorderBrush" Value="#FFFFFF" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border
                                            Padding="25,2,25,2"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="#ffffff"
                                            BorderThickness="0.1"
                                            CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>

                                </Setter.Value>

                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Offset="0.1" Color="#a6c94a" />
                                                <GradientStop Offset="1" Color="#69be9b" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Opacity" Value="1" />
                                    <Setter Property="BorderBrush" Value="#FFFFFF" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
