<Window
    x:Class="SocinatorInstaller.Views.DiskSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SocinatorInstaller.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Socinator Disk Space"
    Width="500"
    Height="300"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  Custom Style for GridViewColumnHeader to Remove Unwanted Padding  -->
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="0" />
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="0" />
        </Style>
    </Window.Resources>
    <Border
        Background="White"
        BorderBrush="#FFBBBBBB"
        BorderThickness="1"
        CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10,10,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource RubikRegular}"
                    FontSize="15"
                    FontWeight="Normal"
                    Foreground="#092E5A"
                    Text="Socinator Disk Space" />

                <Button
                    Grid.Column="1"
                    Width="25"
                    Height="25"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="close_click"
                    Content="&#xE8BB;"
                    Cursor="Hand"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="12"
                    FontWeight="SemiBold"
                    ToolTip="Close">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Foreground" Value="#092E5A" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>

                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <!--  Default color  -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red" />
                                    <!--  Hover color  -->
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>
            <StackPanel Grid.Row="1" Margin="10,10,10,10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="13"
                    Foreground="#131313"
                    Opacity="0.8"
                    Text="The list below includes the drives you can install Socinator to, along with each drive's available and required disk space."
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <Border
                    Margin="0,10,0,0"
                    BorderBrush="#38BBC8"
                    BorderThickness="1.5"
                    CornerRadius="10">
                    <ListView
                        Name="listViewDisks"
                        Height="140"
                        Margin="5"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <!--  Volume Column with Custom Header and Content Alignment  -->
                                <GridViewColumn Width="120">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Left">
                                                <TextBlock
                                                    Margin="5,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Text="Volume" />
                                            </Grid>
                                            <!--  Header alignment  -->
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Left">
                                                <TextBlock
                                                    Margin="5,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Volume}" />
                                            </Grid>
                                            <!--  Cell alignment  -->
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!--  Disk Size Column with Custom Header and Content Alignment  -->
                                <GridViewColumn Width="120">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Stretch">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Text="Disk Size" />
                                            </Grid>
                                            <!--  Header alignment  -->
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Right">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding DiskSize}" />
                                            </Grid>
                                            <!--  Cell alignment  -->
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!--  Available Column with Custom Header and Content Alignment  -->
                                <GridViewColumn Width="120">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Right">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    VerticalAlignment="Center"
                                                    Text="Available" />
                                            </Grid>
                                            <!--  Header alignment  -->
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Right">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Available}" />
                                            </Grid>
                                            <!--  Cell alignment  -->
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="120">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Right">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    VerticalAlignment="Center"
                                                    Text="Required" />
                                            </Grid>
                                            <!--  Header alignment  -->
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Right">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Required}" />
                                            </Grid>
                                            <!--  Cell alignment  -->
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="120">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Right">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    VerticalAlignment="Center"
                                                    Text="Difference" />
                                            </Grid>
                                            <!--  Header alignment  -->
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Right">
                                                <TextBlock
                                                    Margin="0,0,5,0"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Difference}" />
                                            </Grid>
                                            <!--  Cell alignment  -->
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>


                </Border>

                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Border
                        x:Name="OkBtnBorder"
                        HorizontalAlignment="Right"
                        BorderBrush="White"
                        BorderThickness="0.8"
                        CornerRadius="5"
                        Opacity="{Binding NextBtnOpacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="Visible">
                        <Button
                            Name="btn_ok"
                            Width="100"
                            Height="{Binding ElementName=CancelBtn, Path=ActualHeight}"
                            Padding="15,10,15,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            BorderBrush="White"
                            BorderThickness="1"
                            Click="OK_Click"
                            Content="OK"
                            Cursor="Hand"
                            FontFamily="{StaticResource RubikRegular}"
                            FontSize="12"
                            Foreground="#FFFFFF">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="#092E5A" />
                                    <Setter Property="Opacity" Value="0.9" />
                                    <Setter Property="BorderBrush" Value="#092E5A" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border
                                                    Padding="25,10,25,10"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="#ffffff"
                                                    BorderThickness="0.1"
                                                    CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>

                                        </Setter.Value>

                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5" />
                                            <Setter Property="BorderBrush" Value="#FFFFFF" />
                                            <Setter Property="BorderThickness" Value="0" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                        <GradientStop Offset="1.2" Color="#a6c94a" />
                                                        <GradientStop Offset="0" Color="#69be9b" />
                                                        <LinearGradientBrush.RelativeTransform>
                                                            <RotateTransform Angle="85" />
                                                        </LinearGradientBrush.RelativeTransform>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Opacity" Value="1" />
                                            <Setter Property="BorderBrush" Value="#FFFFFF" />
                                            <Setter Property="BorderThickness" Value="0" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>

    </Border>
</Window>
